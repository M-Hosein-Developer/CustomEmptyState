<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEmptyState">

        <!--image-->
        <attr name="es_src" format="integer" />


        <!--single and max line-->
        <attr name="es_titleSingleLine" format="boolean" />
        <attr name="es_descSingleLine" format="boolean" />
        <attr name="es_titleMaxLine" format="integer" />
        <attr name="es_descMaxLine" format="integer" />


        <!--text-->
        <attr name="es_titleText" format="string" />
        <attr name="es_descText" format="string" />
        <attr name="es_btnOkText" format="string" />


        <!--text color-->
        <attr name="es_titleTextColor" format="color" />
        <attr name="es_descTextColor" format="color" />
        <attr name="es_btnOkTextColor" format="color" />


        <!--font-->
        <attr name="es_fontFamily" format="string" />


        <!--text size-->
        <attr name="es_titleTextSize" format="dimension" />
        <attr name="es_descTextSize" format="dimension" />
        <attr name="es_btnOkTextSize" format="dimension" />

        <!--card-->
        <!--<attr name="es_cardRadius" format="dimension" />
        <attr name="es_cardElevation" format="dimension" />
        <attr name="es_cardBackgroundColor" format="color" />
-->

        <!--padding-->
        <attr name="es_titlePadding" format="dimension" />
        <attr name="es_descPadding" format="dimension" />
        <attr name="es_btnOkPadding" format="dimension" />
        <attr name="es_btnOkEndPadding" format="dimension" />
        <attr name="es_imgPadding" format="dimension" />


        <!--visibility-->
        <attr name="es_btnOkVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <attr name="es_txtTitleVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <attr name="es_txtDescriptionVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <attr name="es_imgVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1"/>
        </attr>

        <attr name="es_mainCustomEmptyStateVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>


       <!-- style
        <attr name="titleTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <attr name="descriptionTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <attr name="btnTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>-->


        <!--background src-->
        <attr name="es_btnOkBackground" format="reference" />
        <attr name="es_mainCustomDialogBackground" format="reference" />
        <attr name="es_txtTitleBackground" format="reference" />
        <attr name="es_txtDescriptionBackground" format="reference" />


        <!--lottie-->
        <attr name="es_autoPlay_animation" format="boolean"/>
        <attr name="es_loop_animation" format="boolean"/>
        <attr name="es_rawRes_animation" format="reference"/>
        <attr name="es_lottieVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>



        <!--button-->
        <attr name="es_btnCornerRadius" format="dimension"/>
        <attr name="es_setIconButton" format="reference"/>
        <attr name="es_setIconButtonGravity">
            <flag name="start" value="0x1"/>
            <flag name="textStart" value="0x2"/>
            <flag name="end" value="0x3"/>
            <flag name="textEnd" value="0x4"/>
            <flag name="top" value="0x10"/>
            <flag name="textTop" value="0x20"/>
        </attr>
        <attr name="es_iconButtonSize" format="dimension"/>



    </declare-styleable>

</resources>